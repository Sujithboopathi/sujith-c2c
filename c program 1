#include <stdio.h>

int main() {
    int number, sum;
    printf("Enter an integer: ");
    scanf("%d", &number);
    while (number >= 10) {
        sum = 0;
        while (number > 0) {
            sum += number % 10; 
            number /= 10;        
        }
        
        number = sum;
    }
    printf("Output: %d\n", number);

    return 0;
}
